<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/yellow1"
                android:endColor="@color/yellow2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/orange1" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/yellow1"
                android:endColor="@color/yellow2"

                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/orange2" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#cafafa"
                android:endColor="#64cac5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#54b0b3" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>
